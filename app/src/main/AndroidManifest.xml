<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sachin.covid_19trackerandvaccinechecker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Covid19TrackerAndVaccineChecker">
        <activity android:name=".Activity.VaccineChecker"></activity>
        <activity android:name=".Activity.VaccineCheckerActivity" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.EachCountryDataActivity" />
        <activity android:name=".Activity.EachDistrictDataActivity" />
        <activity android:name=".Activity.DistrictWiseDataActivity" />
        <activity android:name=".Activity.EachStateDataActivity" />
        <activity android:name=".Activity.CountryWiseDataActivity" />
        <activity android:name=".Activity.WorldDataActivity" />
        <activity android:name=".Activity.StateWiseDataActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>